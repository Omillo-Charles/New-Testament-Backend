# Server Configuration
PORT=5500

# MongoDB Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database-name?retryWrites=true&w=majority

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Admin Email (receives contact form notifications)
ADMIN_EMAIL=admin@example.com

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Environment
ENV=development

# Application Name
APP_NAME=NTCOGK Contact Form API

# CORS Configuration (comma-separated origins for multiple domains)
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
